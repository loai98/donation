<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:paddingTop="30dp"
    android:background="@drawable/background2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:contextClickable="true"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        app:civ_border_color="#292424"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        tools:ignore="MissingClass" />

    <LinearLayout
        android:layout_above="@+id/profile_To_donate"
        android:layout_below="@+id/profile_image"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#025860"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Full Name "
            android:textSize="30dp" />

        <TextView
            android:textColor="#025860"
            android:id="@+id/profile_country"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Jordan "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_country"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="#025860"
            android:text="phone "
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />

    </LinearLayout>



    <Button
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/profile_To_donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image"
        android:text="@string/profile_To_donate_btn"
        android:textAllCaps="false"
        android:textColor="#025860"
        android:textSize="20dp" />


</RelativeLayout>