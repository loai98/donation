<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Donate">

    <LinearLayout
        android:layout_above="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :"
                android:textColor="#025860"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/donate_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_text_drawable"
                android:textColor="#025860"
                android:textSize="20sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Dsecription :"
            android:textColor="#025860"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/donate_description"
            android:padding="5dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_drawable"
            android:textColor="#025860"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_above="@+id/linear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:paddingEnd="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/donate_addImage"
            android:drawablePadding="5dp"
            android:layout_marginStart="20dp"
            android:text="Add Image"
            android:textColor="#025860"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_camera"
            android:layout_alignParentBottom="true"
            android:background="@drawable/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/donate_imageView"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="55dp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:layout_marginEnd="5dp"
            android:id="@+id/donate_selectLocation"
            android:textColor="#025860"
            android:layout_weight="1"
            android:background="@drawable/image"
            android:textAllCaps="false"
            android:text="Select Location"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/donate_place"
            android:textColor="#025860"
            android:background="@drawable/image"
            android:textAllCaps="false"
            android:text="Send"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


    </LinearLayout>



</RelativeLayout>