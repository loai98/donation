<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".Login">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/c1"
        app:civ_border_color="#292424"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        tools:ignore="MissingClass" />

    <CheckBox
        android:id="@+id/login_chekRemember"
        android:textColor="#025860"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/Login_password"
        android:text="Remember me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/Login_userName"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="E_mail"
        android:paddingStart="10dp"
        android:text="lababneh" />

    <EditText
        android:id="@+id/Login_password"
        android:layout_width="290dp"
        android:layout_height="58dp"
        android:layout_below="@id/Login_userName"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:text="" />

    <Button
        android:textColor="#025860"
        android:id="@+id/Login_btn_profile"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_chekRemember"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:background="@drawable/image"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Login_btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Login_btn_profile"
            android:text="Dont Have accunt ?"
            android:textColor="#090909" />

        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/Login_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Login_btn_profile"
            android:layout_toEndOf="@id/Login_text"
            android:text="Sign Up"
            android:textColor="#0621BC"
            android:textSize="15dp"

            />

    </LinearLayout>



</RelativeLayout>